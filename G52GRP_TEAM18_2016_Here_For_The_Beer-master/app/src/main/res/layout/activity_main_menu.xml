<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="120dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="hereforthebeer.sokoban.MainMenuActivity">

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/button_quick_play"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/button_new_game"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Campaign"
        android:layout_height="wrap_content"
        android:id="@+id/button_new_game"
        android:layout_width="match_parent"
        android:onClick="onNewGameTap"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/txt_Title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Quick Play"
        android:layout_height="wrap_content"
        android:id="@+id/button_quick_play"
        android:onClick="onQuickPlayTap"
        android:layout_width="match_parent"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/divider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:text="Sokoban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_Title"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="How to play"
        android:layout_height="wrap_content"
        android:id="@+id/button_about_us"
        android:onClick="onHowToPlay"
        android:layout_width="match_parent"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/divider2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
